    <creationDate>7/27/2013</creationDate>
    <author>ThemeXpert</author>
    <authorUrl>http://themexpert.com/</authorUrl>
    <copyright>Copyright (C) 2010 - 2013 ThemeXpert</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPLv3</license>
